<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.suitecare.suitecare.api.mate_resume.mapper.MainServiceMapper">

    <insert id="createMainService">
        INSERT INTO mainService(mate_resume_id, name)
        VALUES
        <foreach collection="mainServiceList" item="mainService" open="(" close=")" separator=",">
            #{mateResumeId}, #{mainService.name}
        </foreach>
    </insert>

    <select id="findMainServiceById" resultType="MainServiceDTO">
        SELECT s.id, name
        FROM mainservice s
        JOIN materesume m ON m.id = s.mate_resume_id
        WHERE m.id = #{id};
    </select>

</mapper>