<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.suitecare.suitecare.api.mate_resume.mapper.MainServiceMapper">

    <select id="findMainServiceById" resultType="MainServiceDTO">
        SELECT s.id, name
        FROM mainservice s
        JOIN materesume m ON m.id = s.mate_resume_id
        WHERE m.id = #{id};
    </select>

    <insert id="createMainService">
        INSERT INTO mainService(mate_resume_id, name)
        VALUES
        <foreach collection="mainServiceList" item="mainService" separator=",">
            (#{mate_resume_id}, #{mainService.name})
        </foreach>
    </insert>

    <insert id="insertMainService">
        INSERT INTO mainService(mate_resume_id, name)
        VALUES
        (#{mate_resume_id}, #{mainServiceDTO.name})
    </insert>

    <update id="updateMainService">
        UPDATE mainservice
        <set>

            <if test="name != null">
                name = #{name}
            </if>

        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteMainService">
        DELETE FROM mainservice WHERE mate_resume_id = #{login_id}
    </delete>
</mapper>