<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.suitecare.suitecare.api.mate.mapper.LocationMapper">

    <select id="findLocationById" resultType="LocationDTO">
        SELECT id, name
        FROM location
        WHERE member_id = #{login_id};
    </select>

    <insert id="createLocation">
        INSERT INTO location(member_id, name)
        VALUES
        <foreach collection="location" index="idx" item="loc" separator=", ">
            (#{login_id}, #{loc})
        </foreach>
    </insert>
</mapper>