<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.suitecare.suitecare.api.mate_resume.mapper.LocationMapper">

    <insert id="createLocation">
        INSERT INTO location(mate_resume_id, name)
        VALUES
        <foreach collection="locationList" item="location" separator=",">
            (#{mate_resume_id}, #{location.name})
        </foreach>
    </insert>

    <insert id="insertLocation">
        INSERT INTO location(mate_resume_id, name)
        VALUES
        (#{mate_resume_id}, #{locationDTO.name})
    </insert>

    <select id="findLocationById" resultType="LocationDTO">
        SELECT l.id, name
        FROM location l
        JOIN materesume m ON m.id = l.mate_resume_id
        WHERE m.id = #{id};
    </select>

    <update id="updateLocation">
        UPDATE location
        <set>

            <if test="name != null">
                name = #{name}
            </if>

        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteLocation">
        DELETE FROM location WHERE mate_resume_id = #{login_id}
    </delete>
</mapper>